
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read/write their own profile.
    match /users/{userId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // A user can only read/write a chat they are a participant in.
    match /chats/{chatId} {
      allow read, write: if request.auth != null && request.auth.uid in resource.data.participants;
    }

    // A user can only read/write messages in a chat they are a participant in.
    match /chats/{chatId}/messages/{messageId} {
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/chats/$(chatId)).data.participants.hasAny([request.auth.uid]);
    }
    
    // Dispensary group chats are public to all authenticated users.
    match /dispensaries/{dispensaryId}/messages/{messageId} {
      // Anyone logged in can read the chat messages.
      allow read: if request.auth != null;

      // Anyone logged in can create a message.
      allow create: if request.auth != null;

      // Only the message owner can update or delete their own message.
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.user.id;
    }

    // Deny all other reads/writes by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
