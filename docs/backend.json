
{
  "entities": {
    "User": {
      "title": "User",
      "type": "object",
      "description": "Represents a user of the application.",
      "properties": {
        "username": {
          "type": "string",
          "description": "The user's unique username."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "photoURL": {
          "type": "string",
          "description": "URL of the user's profile image.",
          "format": "uri"
        },
        "bio": {
          "type": "string",
          "description": "A short biography of the user."
        },
        "followersCount": {
          "type": "number",
          "description": "The number of followers the user has."
        },
        "followingCount": {
          "type": "number",
          "description": "The number of users this user is following."
        },
        "createdAt": {
          "type": "string",
          "description": "Timestamp of when the user account was created.",
          "format": "date-time"
        },
        "chatIds": {
            "type": "array",
            "description": "An array of chat IDs the user is a participant in.",
            "items": { "type": "string" }
        }
      },
      "required": [
        "username",
        "displayName",
        "createdAt"
      ]
    },
    "Post": {
      "title": "Post",
      "type": "object",
      "description": "Represents a post created by a user.",
      "properties": {
        "type": {
          "type": "string",
          "description": "The type of the post.",
          "enum": ["photo", "video", "music", "text"]
        },
        "fileUrl": {
          "type": "string",
          "description": "Link to the file in Firebase Storage.",
          "format": "uri"
        },
        "thumbnail": {
          "type": "string",
          "description": "Optional thumbnail for video or photo posts.",
          "format": "uri"
        },
        "caption": {
          "type": "string",
          "description": "Text caption for the post."
        },
        "userId": {
          "type": "string",
          "description": "The ID of the user who created the post."
        },
        "likes": {
          "type": "number",
          "description": "The number of likes the post has received."
        },
        "commentsCount": {
          "type": "number",
          "description": "The number of comments on the post."
        },
        "duration": {
          "type": "number",
          "description": "Duration in seconds for music or video posts."
        },
        "tags": {
          "type": "array",
          "description": "Hashtags or categories for the post.",
          "items": {
            "type": "string"
          }
        },
        "createdAt": {
          "type": "string",
          "description": "Timestamp of when the post was created.",
          "format": "date-time"
        }
      },
      "required": [
        "type",
        "userId",
        "createdAt"
      ]
    },
    "Dispensary": {
      "title": "Dispensary",
      "type": "object",
      "description": "Represents a dispensary location.",
      "properties": {
        "name": { "type": "string" },
        "address": { "type": "string" }
      }
    },
    "Chat": {
        "title": "Chat",
        "type": "object",
        "description": "Represents a chat conversation between two or more users.",
        "properties": {
            "participants": {
                "type": "array",
                "description": "An array of user IDs participating in the chat.",
                "items": { "type": "string" }
            },
            "lastMessage": {
                "type": "string",
                "description": "The content of the last message sent in the chat."
            },
            "timestamp": {
                "type": "number",
                "description": "The timestamp of the last message."
            }
        },
        "required": ["participants", "timestamp"]
    },
    "ChatMessage": {
      "title": "ChatMessage",
      "type": "object",
      "description": "A message within a chat.",
      "properties": {
        "senderID": {
            "type": "string",
            "description": "The ID of the user who sent the message."
        },
        "message": { "type": "string" },
        "timestamp": { "type": "number" },
        "imageUrl": { "type": "string", "format": "uri" }
      },
      "required": ["senderID", "message", "timestamp"]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "User",
          "schema": {
            "$ref": "#/entities/User"
          },
          "description": "Stores user profile information.",
          "params": [
            {
              "name": "userId",
              "description": "The unique identifier for the user."
            }
          ]
        }
      },
      {
        "path": "/posts/{postId}",
        "definition": {
          "entityName": "Post",
          "schema": {
            "$ref": "#/entities/Post"
          },
          "description": "Stores all posts created by users.",
          "params": [
            {
              "name": "postId",
              "description": "The unique identifier for the post."
            }
          ]
        }
      },
       {
        "path": "/dispensaries/{dispensaryId}",
        "definition": {
          "entityName": "Dispensary",
          "schema": {
            "$ref": "#/entities/Dispensary"
          },
          "description": "Stores dispensary information."
        }
      },
      {
        "path": "/chats/{chatId}",
        "definition": {
          "entityName": "Chat",
          "schema": {
            "$ref": "#/entities/Chat"
          },
          "description": "Stores metadata for each chat session."
        }
      },
      {
        "path": "/chats/{chatId}/messages/{messageId}",
        "definition": {
          "entityName": "ChatMessage",
          "schema": {
            "$ref": "#/entities/ChatMessage"
          },
          "description": "Stores all messages for a specific chat."
        }
      }
    ]
  }
}
